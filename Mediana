numeros = []

print("Ingrese n√∫meros ordenados (ingrese '.' para finalizar):")

while True:
    entrada = input()

    if entrada == ".":
        break

    numero = int(entrada)
    numeros.append(numero)

n = len(numeros)

if n % 2 == 1:
   
    mediana = numeros[n // 2]
    print("La mediana es:", mediana)
else:
  
    mediana1 = numeros[n // 2 - 1]
    mediana2 = numeros[n // 2]
    mediana = (mediana1 + mediana2) / 2.0
    print("La mediana es:", mediana)
